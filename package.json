{
  "name": "orangehrm-automation-fw",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:general": "npx playwright test --headed --project=chromium",
    "test:qa": "cross-env ENV=qa npx playwright test --project=chromium",
    "test:staging": "cross-env ENV=staging npx playwright test --project=chromium",
    "test:prod": "cross-env ENV=prod npx playwright test --project=chromium",
    "test:report": "npx playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "test:smoke": "npx playwright test --grep @smoke --project=chromium",
    "test:sanity": "npx playwright test --grep @sanity --project=chromium",
    "test:regression": "npx playwright test --grep @regression --project=chromium"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.2",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "cross-env": "^10.1.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5"
  }
}
